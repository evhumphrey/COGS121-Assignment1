<div class="container">
<div class="page-header">
  <h1>Posts you're in</h1>
</div>
  {{#each photos}}
  {{#if row}}
  <div class="row">
  {{/if}}
  <div class="col-xs-4">
    <div class="thumbnail">
      <p>{{message}}</p>
      <p><a href="{{url}}" target='_blank'>See where post takes you!</a></p>
      
      <div>
      
      <p class="text-left">{{caption}}</p>
      </div>
    </div>
  </div>
  {{#if end_row}}
    </div>
  {{/if}}
  {{/each}}

</div>
